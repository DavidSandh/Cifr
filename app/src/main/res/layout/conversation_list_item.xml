<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="5dp"
    android:background="@color/CifrColorYellow">

    <ImageView
        android:id="@+id/conversationItemImageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        app:srcCompat="@mipmap/ic_launcher"
        android:background="@color/CifrColorYellow"/>

    <TextView
        android:id="@+id/conversationItemTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_alignTop="@+id/conversationItemImageView"
        android:layout_alignBottom="@+id/conversationItemImageView"
        android:gravity="center"
        android:fontFamily="sans-serif-condensed"
        android:textStyle="bold|italic"
        android:text="TextView"
        android:textSize="40sp"
        android:textColor="@color/CifrColorBlue"
        />

    <TextView
        android:id="@+id/conversationItemFlag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="*"
        android:textSize="22sp"
        android:textColor="@color/CifrColorYellow"
        android:layout_alignBottom="@id/conversationItemTextView"
        android:gravity="right"
        android:visibility="invisible"
        />
</RelativeLayout>