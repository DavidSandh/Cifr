<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="se.mah.ag7406.cifr.client.ConversationPackage.Conversation">

<RelativeLayout
    android:layout_width="match_parent"
    android:background="@color/CifrColorYellow"
    android:layout_height="match_parent">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/conversationView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:background="@color/CifrColorYellow"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/conversationUser" />

    <ImageButton
        android:id="@+id/imageButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:backgroundTint="@color/CifrColorYellow"
        android:onClick="sendMessageActivityButton"
        android:visibility="visible"
        app:srcCompat="@mipmap/ic_message_black_48dp" />

    <TextView
        android:id="@+id/conversationUser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentStart="true"
        android:layout_centerHorizontal="false"
        android:layout_centerInParent="false"
        android:layout_centerVertical="false"
        android:autoText="false"
        android:backgroundTint="@color/CifrColorYellow"
        android:fontFamily="serif"
        android:includeFontPadding="true"
        android:singleLine="false"
        android:text="TextView"
        android:textAlignment="center"
        android:textColor="@color/CifrColorGrey"
        android:textSize="32sp"
        android:visibility="visible"
        tools:textColor="@color/CifrColorBlue"
        tools:textColorHighlight="@color/CifrColorBlue" />

</RelativeLayout>

    <android.support.design.widget.NavigationView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        app:menu="@menu/navigationmenu"
        android:layout_gravity="start"
        android:background="@color/CifrColorGrey"
        android:textColor="@color/CifrColorYellow">
    </android.support.design.widget.NavigationView>
    </android.support.v4.widget.DrawerLayout>
