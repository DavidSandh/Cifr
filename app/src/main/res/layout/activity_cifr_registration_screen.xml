<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/CifrColorYellow"
    android:focusableInTouchMode="true"
    tools:context="se.mah.ag7406.cifr.client.StartActivities.RegistrationScreen">

    <EditText
        android:id="@+id/password1register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="73dp"
        android:layout_marginTop="30dp"
        android:ems="10"
        android:fontFamily="sans-serif-condensed"
        android:hint="@string/registration_password"
        android:inputType="textPassword"
        android:textColor="@color/CifrColorGrey"
        android:textColorLink="@color/CifrColorGrey"
        android:backgroundTint="@color/CifrColorGrey"
        android:textCursorDrawable="@null"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/usernameregister" />

    <EditText
        android:id="@+id/password2register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="73dp"
        android:layout_marginTop="30dp"
        android:ems="10"
        android:fontFamily="sans-serif-condensed"
        android:hint="@string/registration_password"
        android:inputType="textPassword"
        android:textColor="@color/CifrColorGrey"
        android:textColorLink="@color/CifrColorGrey"
        android:backgroundTint="@color/CifrColorGrey"
        android:textCursorDrawable="@null"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/password1register" />

    <TextView
        android:id="@+id/registrationTextViewUsername"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="-1dp"
        android:layout_marginLeft="73dp"
        android:fontFamily="sans-serif-condensed"
        android:text="@string/registration_username2"
        android:textColor="@color/CifrColorBlue"
        android:textColorLink="@color/CifrColorBlue"
        app:layout_constraintBottom_toTopOf="@+id/usernameregister"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/registrationTextViewPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="0dp"
        android:layout_marginLeft="73dp"
        android:fontFamily="sans-serif-condensed"
        android:text="@string/registration_password2"
        android:textColor="@color/CifrColorBlue"
        android:textColorLink="@color/CifrColorBlue"
        app:layout_constraintBottom_toTopOf="@+id/password1register"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/registrationTextViewPasswordRepeat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="-1dp"
        android:layout_marginLeft="73dp"
        android:fontFamily="sans-serif-condensed"
        android:text="@string/registration_passwordrepeat"
        android:textColor="@color/CifrColorBlue"
        android:textColorLink="@color/CifrColorBlue"
        app:layout_constraintBottom_toTopOf="@+id/password2register"
        app:layout_constraintLeft_toLeftOf="parent" />

    <Button
        android:id="@+id/registrationButtonRegister"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:layout_marginLeft="136dp"
        android:layout_marginTop="16dp"
        android:background="@android:color/transparent"
        android:elevation="0dp"
        android:fontFamily="sans-serif-condensed"
        android:onClick="login"
        android:text="@string/registration_register"
        android:textAllCaps="false"
        android:textColor="@color/CifrColorBlue"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/registrationTextViewWarning"
        app:layout_constraintVertical_bias="0.481" />

    <TextView
        android:id="@+id/registrationTextViewWarning"
        android:layout_width="115dp"
        android:layout_height="94dp"
        android:text="@string/registration_warning"
        android:textAlignment="center"
        android:textColor="@color/CifrColorGrey"
        android:layout_marginTop="27dp"
        app:layout_constraintTop_toBottomOf="@+id/password2register"
        android:layout_marginLeft="123dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <EditText
        android:id="@+id/usernameregister"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="73dp"
        android:layout_marginTop="97dp"
        android:ems="10"
        android:fontFamily="sans-serif-condensed"
        android:hint="@string/registration_username"
        android:inputType="textPersonName"
        android:textColor="@color/CifrColorGrey"
        android:textColorLink="@color/CifrColorGrey"
        android:textCursorDrawable="@null"
        android:backgroundTint="@color/CifrColorGrey"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/informationImageButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@android:drawable/ic_menu_info_details"
        android:onClick="showInformation"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/usernameregister"
        android:layout_marginLeft="8dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="85dp" />
</android.support.constraint.ConstraintLayout>
